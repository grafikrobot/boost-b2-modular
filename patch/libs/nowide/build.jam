import project ;

project /boost/nowide
    : common-requirements
        <source>/boost/config//libs
        <source>/boost/core//libs
        <source>/boost/fusion//libs
        <source>/boost/mpl//libs
        <source>/boost/tuple//libs
        <source>/boost/type_traits//libs
