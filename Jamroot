import project ;

constant BOOST_VERSION : 1.83.0 ;

project boost
    : requirements
        # Disable auto-linking for all targets here, primarily because it caused
        # troubles with V2.
        <define>BOOST_ALL_NO_LIB=1

    : default-build
        <visibility>hidden
        <threading>multi

    : build-dir
        bin.v2
    ;

