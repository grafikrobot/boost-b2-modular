import project ;
import modules ;

path-constant BOOST_CONFIG_ROOT : . ;

modules.poke : BOOST_BUILD_PATH
    : $(BOOST_CONFIG_ROOT)/checks [ modules.peek : BOOST_BUILD_PATH ] ;

project /boost/config
    : common-requirements
        <include>include
    ;

explicit
    [ alias boost_config ]
    [ alias libs ]
    [ alias all : test ]
    [ alias testing
        : # sources
        : # requirements
        : # default-buidl
        : # usage-requirements
            <include>test
        ]
    ;
